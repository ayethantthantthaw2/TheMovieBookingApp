<?xml version="1.0" encoding="utf-8"?>
<viewpods.MovieListViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMovieListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium3"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Now Showing"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_3x"
        android:textStyle="bold" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMovieList"
        android:clipToPadding="false"
        android:paddingEnd="@dimen/margin_medium2"
        android:layout_below="@+id/tvMovieListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</viewpods.MovieListViewPod>